<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cor_fundo"
    tools:context=".CadastroAdvogado">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgVoltar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_arrow_left"
            app:tint="@color/dourado" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/logo2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="Criar Cadastro"
            android:textColor="@color/verde"
            android:textSize="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="como Advogado(a)"
            android:textColor="@color/dourado"
            android:textSize="28sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="5dp"
            android:text="Nome Completo"
            android:textSize="17sp"
            android:textColor="@color/verde" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nomeAdvogado"
            android:layout_width="315dp"
            android:layout_height="40dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:startIconDrawable="@drawable/ic_account_circle"
            android:layout_gravity="center_horizontal"
            android:hint="ex: João da Silva Costa">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:textSize="17sp"
            android:text="Data de Nascimento"
            android:textColor="@color/verde" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nascimento"
            android:layout_width="315dp"
            android:layout_height="40dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:startIconDrawable="@drawable/ic_date"
            android:layout_gravity="center_horizontal"
            android:hint="ex: 11/04/1989">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:textSize="17sp"
            android:text="E-mail"
            android:textColor="@color/verde" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/emailAdvogado"
            android:layout_width="315dp"
            android:layout_height="40dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:startIconDrawable="@drawable/ic_email"
            android:layout_gravity="center_horizontal"
            android:hint="ex: meuemail@email.com">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:textSize="17sp"
            android:text="Telefone Whatsapp"
            android:textColor="@color/verde" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/telefone"
            android:layout_width="315dp"
            android:layout_height="40dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:startIconDrawable="@drawable/ic_phone_android"
            android:layout_gravity="center_horizontal"
            android:hint="ex: (11) 91234-5678">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:text="Cidade"
            android:textColor="@color/verde" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/cidade"
            android:layout_width="315dp"
            android:layout_height="40dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            android:layout_gravity="center_horizontal"
            android:hint="ex: São Paulo">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:textSize="17sp"
            android:text="Estado"
            android:textColor="@color/verde" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/estado"
            android:layout_width="315dp"
            android:layout_height="40dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            android:layout_gravity="center_horizontal"
            android:hint="ex: SP">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:textSize="17sp"
            android:text="Registro na OAB"
            android:textColor="@color/verde" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/registroOAB"
            android:layout_width="315dp"
            android:layout_height="40dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            android:layout_gravity="center_horizontal"
            android:hint="ex: 123456-OAB">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:textSize="17sp"
            android:text="Crie uma senha"
            android:textColor="@color/verde" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/senha"
            android:layout_width="315dp"
            android:layout_height="40dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:startIconDrawable="@drawable/ic_lock"
            app:endIconMode="password_toggle"
            android:layout_gravity="center_horizontal"
            android:hint="no mínimo 8 caracteres">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/bntcadastrarAdvogado"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/botao_redondo"
            android:text="Cadastrar"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22dp" />

    </LinearLayout>

</ScrollView>