<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CodigoDeConfirmacao">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cor_fundo"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgVoltar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_arrow_left"
            app:tint="#B58D1F" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/logo2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center_horizontal"
            android:text="Enviamos o código para o seu email"
            android:textColor="#008290"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/edtEmail"
            style="@style/Edit_Text"
            android:background="@drawable/borda"
            android:drawableEnd="@drawable/ic_baseline_key"
            android:hint="Insira o código"
            android:inputType="number" />

        <Button
            android:id="@+id/btnEnviar"
            style="@style/Button"
            android:background="@drawable/botao_redondo"
            android:text="Enviar"
            android:textAllCaps="false"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="Caso não encontre o email na sua caixa"
            android:textColor="#008290"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="principal, verifique a caixa de spam"
            android:layout_marginBottom="40dp"
            android:textColor="#008290"
            android:textSize="20dp" />

    </LinearLayout>

</ScrollView>