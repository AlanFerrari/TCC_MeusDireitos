<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditarPerfil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/cor_fundo"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgVoltar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_arrow_left"
            app:tint="#B58D1F" />

        <ImageView
            android:id="@+id/fotoPerfil"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-40dp"
            android:background="@drawable/perfil_circulo"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_account_circle" />

        <TextView
            android:id="@+id/editarFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp"
            android:text="Editar foto"
            android:textColor="@color/dourado"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/nomeAdvogado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Nome da Pessoa"
            android:textColor="@color/verde"
            android:textSize="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Email: "
                android:textColor="@color/dourado"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="meusdireitos@direitos.com"
                android:textColor="@color/verde"
                android:textSize="21sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Whatsapp: "
                android:textColor="@color/dourado"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/telefone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="(11) 91234-5678"
                android:textColor="@color/verde"
                android:textSize="21sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:text="Área de Atuação"
            android:textColor="@color/dourado"
            android:textSize="22sp"
            android:textStyle="bold" />

        <com.google.android.material.chip.ChipGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipCivil"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Civil"
                android:textSize="18dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipConsumidor"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consumidor"
                android:textSize="18dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTrabalhista"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trabalhista"
                android:textSize="18dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipEmpresarial"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Empresarial"
                android:textSize="18dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipPenal"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Penal"
                android:textSize="18dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAmbiental"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ambiental"
                android:textSize="18dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipContratual"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contratual"
                android:textSize="18dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTributário"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tributário"
                android:textSize="18dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipTI"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TI"
                android:textSize="18dp" />

        </com.google.android.material.chip.ChipGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Estado: "
                android:textColor="@color/dourado"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/alterarEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/style_spinner_branco"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Cidade: "
                android:textColor="@color/dourado"
                android:textSize="22dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/alterarCidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/style_spinner_branco"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Registro na OAB: "
                android:textColor="@color/dourado"
                android:textSize="22sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/registroOAB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:text="SP 00000 - Definitivo"
                android:textColor="@color/verde"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="Bibliografia"
            android:textColor="@color/dourado"
            android:textSize="22sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/bibliografia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/borda"
            android:gravity="top"
            android:lines="7"
            android:maxLines="9"
            android:padding="10dp"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged."
            android:textColor="@color/verde" />

        <Button
            android:id="@+id/AlterarPerfil"
            style="@style/Button"
            android:layout_gravity="center_horizontal"
            android:text="Salvar"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </LinearLayout>

</ScrollView>